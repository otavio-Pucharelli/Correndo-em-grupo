@model IEnumerable<Club>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach(var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@item.Image" width="100%" height="225" alt="card image cap" />
                        <div class="card-body">
                            <p class="card-text"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.Title</font></font></p>
                            <p class="card-text"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.Description</font></font></p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Mostrar</font></font></a>
                                    <a type="btn btn-success" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Modificação</font></font></a>
                                </div>
                                <small class="text-body-secondary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.ClubCategory</font></font></small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>